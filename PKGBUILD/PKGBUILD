# Contributor: Piotr Husiaty≈Ñski <phusiatynski@gmail.com>
pkgname=aursh-git
pkgrel=1
pkgver=alpha1
pkgdesc="yet another AUR manager"
arch=(i686 x86_64)
url="http://github.com/husio/aursh/tree/v2"
license=('GPL')
depends=('python>=2.6')
makedepends=('git')
replaces=('aurshell-git')
optdepends=()
source=()
md5sums=()

_gitname="aursh"
_gitroot="git://github.com/husio/${_gitname}.git"
_gitbranch="v2"

build() {
    cd ${startdir}/src
    msg "Connecting to ${_gitroot} git server"
    if [[ -d ${startdir}/src/${_gitname} ]] ; then
        cd ${_gitname}
        git checkout ${_gitbranch} || return 1
        git pull ${_gitroot} ${_gitbranch} || return 1
        msg "The local copy of branch ${_gitbranch} is up to date."
    else
        git clone ${_gitroot} ${_gitname} || return 1
        cd ${_gitname}
        git fetch ${_gitroot} ${_gitbranch}:${_gitbranch} || return 1
        git checkout ${_gitbranch} || return 1
    fi
    msg "git checkout done"
    
    msg "Starting make..."
    mkdir -p ${startdir}/pkg/usr/share/aursh/
    cp -R ${startdir}/src/aursh/src/* ${startdir}/pkg/usr/share/aursh/
    install -Dm 755 ${startdir}/src/aursh/aursh \
        ${startdir}/pkg/usr/bin/aursh
    install -Dm 644 ${startdir}/src/aursh/aurshrc \
        ${startdir}/pkg/usr/share/aursh/aurshrc
}
# vim:set ts=4 sw=4 et:
